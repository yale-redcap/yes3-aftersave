{
    "name": "YES3 Aftersave",

    "namespace": "Yale\\Yes3Aftersave",

    "description": "YES3 Aftersave seeks to ensure that calculations involving data from multiple forms are updated and saved in real time. It works by first identifying all forms having fields that figure in calculations on other forms. When any of these `aftersave` forms is saved, all of the affected calculations on `dependent` forms are updated and saved. The default REDCap recalculation behavior of bypassing empty forms can be overriden for any dependent form. A multipass recalculation is performed, that should ensure that complex expressions involving interdependent calculated fields are resolved correctly. This release is compatible with multi-arm projects.",

    "documentation": "https://yale-redcap.github.io/yes3-aftersave/",

    "prefix": "yes3_aftersave",

    "authors": [
        {
            "name": "Peter Charpentier",
            "email": "redcap@yale.edu",
            "institution": "Yale University"
        }
    ],

    "versions":[
        {
            "version": "v1.0.5",
            "version-date": "2024-12-07",
            "version-change-summary": "Syntax error report added to config set."
        },
        {
            "version": "v1.0.4",
            "version-date": "2024-12-05",
            "version-change-summary": "Now compatible with multi-arm projects."
        },
        {
            "version": "v1.0.2",
            "version-date": "2024-10-15",
            "version-change-summary": "Framework updated to 14"
        },
        {
            "version": "v1.0.0",
            "version-date": "2024-03-23",
            "version-change-summary": "REDCap v14 compatibility"
        },
        {
            "version": "v0.0.1",
            "version-date": "2023-05-20",
            "version-change-summary": "Initial commit."
        }
    ],

    "auth-ajax-actions": [
        "setConfig"
    ],

    "project-settings": [
        {
            "key": "yes3-aftersave-instructions-dependent-forms-1",
            "name": "<h6 style='background-color: indianred; color: white; padding: 15px'>NOTE: Run the <strong>YES3 Aftersave</strong> EM link before you fill out this configuration, and after any project design involving calculated fields.</h6>",
            "type": "descriptive"
        },
        {
            "key": "yes3-aftersave-instructions-dependent-forms-2",
            "name": "<h6 style='padding: 15px; color: darkslategrey; border: 2px solid darkslategrey'>Below are forms that have calculated fields that depend on other forms. For each, indicate whether YES3 Aftersave should never recalculate, recalculate only when the form is non-empty (the REDCap default), or always recalculate.</h6>",
            "type": "descriptive"
        },
        {
           "key": "yes3-dependent-forms",
           "name": "Dependent forms",
           "required": false,
           "type": "sub_settings",
           "repeatable":true,
           "sub_settings":[
                {
                    "key": "yes3-dependent-form",
                    "name": "Dependent form",
                    "required": false,
                    "type": "form-list"
                },
                {
                    "key": "yes3-dependent-form-aftersave-action",
                    "name": "Aftersave action for this form",
                    "required": false,
                    "type": "radio",
                    "choices":[
                        {
                            "name": "never recalculate",
                            "value": "1"
                        },
                        {
                            "name": "recalculate if non-empty",
                            "value": "2"
                        },
                        {
                            "name": "always recalculate",
                            "value": "3"
                        }
                    ]
                }
            ]
        },
        {
            "key": "yes3-aftersave-instructions-readonly-settings",
            "name": "<h6 style='padding: 15px; color: darkslategrey; border: 2px solid darkslategrey'>The following JSON settings are READ ONLY and visible only to superusers. If you accidentally demolish any of these, you may rebuild them via the 'YES3 Aftersave' EM link.</h6>",
            "type": "descriptive",
            "super-users-only": true
        },
        {
            "key": "aftersave-forms-json",
            "name": "aftersave forms",
            "required": false,
            "type": "textarea",
            "super-users-only": true
        },
        {
            "key": "dependent-forms-json",
            "name": "dependent forms",
            "required": false,
            "type": "textarea",
            "super-users-only": true
        },
        {
            "key": "form-bridge-json",
            "name": "form bridge",
            "required": false,
            "type": "textarea",
            "super-users-only": true
        },
        {
            "key": "field-bridge-json",
            "name": "field bridge",
            "required": false,
            "type": "textarea",
            "super-users-only": true
        }
    ],

    "links": {
        "project": [
            {
                "name": "YES3 Aftersave",
                "icon": "fab fa-connectdevelop",
                "url":  "pages/yes3_aftersave.php",
                "show-header-and-footer": true
            }
        ]
    },

    "no-auth-pages": [
    ],

    "compatibility": {
        "php-version-min": "7.4",
        "redcap-version-min": "13.7.3"
    },

    "framework-version": 14
}